Include ~/.dotfiles/.ssh_config.local
# Include ~/.ssh/ssh_config.local
# Include ~/.ssh/jetkvm_config
# Include ~/.ssh/containers_config

# Read more about SSH config files: <https://linux.die.net/man/5/ssh_config>

# Automatically add keys to the agent and use system keychain
Host *
  AddKeysToAgent yes
  IdentityFile ~/.ssh/id_ed25519

Host home
  User agoodkind
  HostName home.goodkind.io

Host ssh.home.goodkind.io
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  LogLevel ERROR

Host router
  User agoodkind
  HostName router.home.goodkind.io

Host suburban
  User root
  HostName hypervisor.suburban.goodkind.io

Host mom
  HostName 10.240.0.121
  User agoodkind

Host mini
  HostName mini.home.goodkind.io
  User agoodkind

Host berylax
  HostName berylax.goodkind.io
  User root
  ForwardAgent yes

Host home-assistant
  HostName home-assistant.home.goodkind.io
  User root
  Port 22222

Host pikvm-suburban
  HostName 10.240.0.57
  User agoodkind

Host ansible
  HostName ssh.home.goodkind.io
  User root@ansible

Host nas
  HostName nas.home.goodkind.io
  User agoodkind
  ForwardAgent yes

Host debianct
  HostName ssh.home.goodkind.io
  User root@debianct
  ForwardAgent yes
  ForwardX11 yes
  ForwardX11Trusted yes
  Compression yes
  TCPKeepAlive yes
  ServerAliveInterval 60

Host vault
  HostName hypervisor.home.goodkind.io
  User root
  ForwardAgent yes

Host vault-jetkvm
  HostName vault-jetkvm.goodkind.io
  User root
  ForwardAgent yes
  LocalForward 80 localhost:8081

Host nas-kvm
  HostName nas-jetkvm.goodkind.io
  User root
  ForwardAgent yes
  LocalForward 80 localhost:8082

Host mwan
  Hostname mwan.home.goodkind.io
  User root
